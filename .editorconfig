# EditorConfig for consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
indent_size = 4
max_line_length = 100

[*.{yaml,yml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[*.toml]
indent_size = 2
