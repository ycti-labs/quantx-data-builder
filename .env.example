# FinSight Data Fetcher Environment Variables
# Copy this file to .env and configure for your environment

# Logging Configuration
FETCHER_LOG_LEVEL=INFO

# Operation Configuration  
FETCHER_OPERATION_MODE=daily
FETCHER_MAX_WORKERS=5

# Storage Configuration
FETCHER_STORAGE_BACKEND=local
FETCHER_OUT_ROOT=./data

# Azure Storage Configuration (when using azure-blob backend)
# FETCHER_AZURE_STORAGE_ACCOUNT=your-storage-account
# FETCHER_AZURE_CONTAINER_NAME=finsight-data

# Universe and Manifest Configuration
FETCHER_UNIVERSE_PATH=meta/universe_v1.csv
FETCHER_MANIFEST_PATH=meta/symbols_manifest.csv

# Data Provider Configuration
FETCHER_FETCH_ACTIONS=false
FETCHER_RATE_LIMIT_DELAY=0.1

# Retry Configuration
FETCHER_MAX_RETRIES=3
FETCHER_RETRY_BACKOFF_FACTOR=2.0

# Data Quality Configuration
FETCHER_MIN_DATA_POINTS=100

# Parquet Configuration
FETCHER_PARQUET_COMPRESSION=zstd
FETCHER_PARQUET_ROW_GROUP_SIZE=50000