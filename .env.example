# .env.example - Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# Azure Storage Configuration
# =============================================================================
# Azure Storage Account Name (required for cloud storage)
AZURE_STORAGE_ACCOUNT_NAME=

# Azure Storage Container Name (default: quantx-data)
AZURE_STORAGE_CONTAINER_NAME=quantx-data

# Azure Tenant ID (required for authentication)
AZURE_TENANT_ID=

# Optional: Azure Service Principal (for CI/CD)
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=

# =============================================================================
# Local Development Settings
# =============================================================================
# Local data storage root directory
LOCAL_DATA_ROOT=./data

# Local metadata storage directory
LOCAL_META_ROOT=./meta

# Storage mode: 'local' or 'azure'
STORAGE_MODE=local

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=json

# Log output directory
LOG_DIR=./logs

# =============================================================================
# Data Fetching Configuration
# =============================================================================
# Maximum concurrent workers for data fetching
MAX_WORKERS=10

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=1.0

# Rate limiting (requests per second)
RATE_LIMIT=5

# =============================================================================
# Azure Functions Configuration (Local Development)
# =============================================================================
AZURE_FUNCTIONS_ENVIRONMENT=Development
AzureWebJobsStorage=UseDevelopmentStorage=true

# =============================================================================
# Optional: Database Configuration (Future)
# =============================================================================
# DATABASE_URL=
# DATABASE_NAME=

# =============================================================================
# Optional: Monitoring & Observability (Future)
# =============================================================================
# APPLICATIONINSIGHTS_CONNECTION_STRING=
# ENABLE_TELEMETRY=false
